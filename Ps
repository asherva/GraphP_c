# מזהים את PID של Hyper
$hyper = Get-Process -Name "hyperd" -ErrorAction SilentlyContinue

if ($hyper) {
    # כל הקונקשנים שה־Hyper מאזין עליהם
    Get-NetTCPConnection -State Listen | Where-Object { $_.OwningProcess -eq $hyper.Id } | Select-Object LocalPort, State
} else {
    Write-Host "Hyper לא רץ כרגע"
}
